<div class="container">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @client.name %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @client.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @client.email %>
    </p>

    <h2>Pets</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Max Weight</th>
          <th>Max Heigth</th>
          <th>Visitas</th>
        </tr>
      </thead>

      <tbody>
        <% @client.pets.each do |pet| %>
          <tr>
            <td><%= pet.name %></td>
            <td><%= pet.maxWeight %></td>
            <td><%= pet.maxHeight %></td>
          </tr>
          <% end %>
      </tbody>
    </table>

    <%= link_to 'Edit', edit_client_path(@client), :class=>"btn btn-secondary" %> |
    <%= link_to 'Back', clients_path, :class=>"btn btn-secondary" %>

</div>



