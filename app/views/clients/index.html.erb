<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="text-center py-5">Clients</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Pets</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= client.petsCount %></td>
          <td><%= link_to 'Show', client, :class=>"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_client_path(client), :class=>"btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Client', new_client_path, :class=>"btn btn-primary" %>

</div>

